
general {
  output_format = "i3bar"
  colors = true
  interval = 1 
}

order += "cpu_usage"
order += "disk /"
order += "battery all"
order += "tztime local"
order += "volume master"

cpu_usage {
        format= "CPU %usage"
        max_threshold= 75
}

disk "/" {
        format = "%avail"
}

battery all {
        format = "%status • %percentage • %remaining"
        format_down = ""
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "%A %m-%d-%Y %I:%M%P"
        hide_if_equals_localtime = false
}

volume master {
        format = "VOL %volume "
        format_muted = "VOL muted "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
